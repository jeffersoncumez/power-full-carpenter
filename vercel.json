{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "env": {
    "VITE_API_URL": "https://power-full-carpenter.onrender.com/api"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "https://power-full-carpenter.onrender.com/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
